{
    "title": "TaskConfiguration",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "Name of this task",
            "type": "string"
        },
        "migrationTaskType": {
            "title": "Migrationtasktype",
            "description": "The string represenation of this class. Do not set",
            "type": "string"
        },
        "files": {
            "title": "Files",
            "description": "List of MARC21 files with authority records",
            "type": "array",
            "items": {
                "$ref": "#/definitions/FileDefinition"
            }
        },
        "ilsFlavour": {
            "$ref": "#/definitions/IlsFlavour"
        },
        "tagsToDelete": {
            "title": "Tagstodelete",
            "default": [],
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "createSourceRecords": {
            "title": "Createsourcerecords",
            "description": "Controls wheter or not to retain the MARC records in SRS.",
            "default": true,
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "migrationTaskType",
        "files",
        "ilsFlavour"
    ],
    "definitions": {
        "FileDefinition": {
            "title": "FileDefinition",
            "type": "object",
            "properties": {
                "file_name": {
                    "title": "File name",
                    "description": "Name of the file to be processed. The location of the file depends on the context",
                    "default": "",
                    "type": "string"
                },
                "discovery_suppressed": {
                    "title": "Discovery suppressed",
                    "default": false,
                    "type": "boolean"
                },
                "staff_suppressed": {
                    "title": "Staff suppressed",
                    "default": false,
                    "type": "boolean"
                },
                "service_point_id": {
                    "title": "Service point ID",
                    "default": "",
                    "type": "string"
                }
            }
        },
        "IlsFlavour": {
            "title": "IlsFlavour",
            "description": "",
            "enum": [
                "aleph",
                "voyager",
                "sierra",
                "millennium",
                "koha",
                "tag907y",
                "tag001",
                "tagf990a",
                "custom",
                "none"
            ],
            "type": "string"
        }
    }
}
